%section#commands
  .line-behind-text
    %h1 Commands
  %table
    %col{ width: '100px' }
    %col{ width: '500px' }
    %col
    - if command_editing_enabled?
      %col{ width: '100px' }
    %tr
      %th Name
      %th Example
      %th Description
      - if command_editing_enabled?
        %th
    - Command.all.each do |command|
      %tr
        %td
          %b= command.name
        %td
          %a{ href: "/search?q=#{command.name}%20#{command.example}"}= "#{command.name} #{command.example}"
        %td
          %i= command.description
        - if command_editing_enabled?
          %td
            %a{ href: "/commands/#{command.id}/edit" } edit
  - if command_editing_enabled?
    %a{ href:"/commands/new" } New Command
